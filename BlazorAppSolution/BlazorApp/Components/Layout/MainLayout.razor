@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>

            <!--
                on the href for the link, we are using the routing page name
                    of the blazor component
                we also need to treat this anchor as a nav-item similar to the menu
            -->
            <a href="privacy" class="nav-item">Privacy</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <!--
            to have the footer appear on each page,
            the best place to put such common html
            will be on the MainLayout page
        -->
        <br/><br/>
        <footer class="text-xl-center">
            &copy; copyrignt CPSC1517 Jan 2025 Class Demonstration (Don Welch)
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
